@model List<Cholo_Sikhi.Models.Cart>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
</head>
<body>
    @{int total_price = 0;}
    <div>
        @if (Model.Count > 0)
        {
            foreach (var d in Model)
            {
                total_price += Convert.ToInt32(d.price);
            <p>@d.c_id</p>
            <p>@d.user_email</p>
         }
        }
    </div>

    <p>Total Price : @total_price</p>
    <div>
         <form method="post" id="contactForm" name="contactForm">
        <input type="text" class="form-control" name="mail" id="eame" value="sarah60ali@gmail.com">
        <button input type="submit" class="button-66" role="button">Delete</button>
    </form>
    </div>
</body>
</html>
